<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_loading_cus"
        android:orientation="vertical">

        <!-- Title Text -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/dialog_pink"
            android:fontFamily="@font/josefin_sans_medium"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Description Text -->
        <!-- Description Text -->
        <TextView
            android:id="@+id/txtDescription"
            style="@style/custom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/josefin_sans_regular"
            android:gravity="center"
            android:text="@string/do_you_want_to_delete"
            android:textColor="@color/pink"
            android:textSize="16sp" />

        <!-- Buttons for Yes/No -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="23dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp">

            <!-- No Button -->
            <FrameLayout
                android:id="@+id/btnNo"
                android:layout_width="101dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_item_confirm">
                <TextView
                    android:id="@+id/txtNo"
                    style="@style/custom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:textColor="@color/pink"
                    android:textSize="16sp"
                    android:text="@string/no"/>
            </FrameLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Yes Button -->
            <FrameLayout
                android:id="@+id/btnYes"
                android:layout_width="101dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_item_yes">
                <TextView
                    android:id="@+id/txtYes"
                    style="@style/custom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="@string/yes"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>