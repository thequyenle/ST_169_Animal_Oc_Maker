<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCBCB"
    tools:context=".ui.itemsticker.ItemStickerActivity">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/tranf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/txtTitle1"
                style="@style/custom_text"
                android:layout_width="0dp"
                android:paddingVertical="2dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnSettings"
                android:layout_toEndOf="@+id/btnBack"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/creepstercaps_regular"
                android:gravity="center"
                android:text="Item Sticker"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings" />
        </RelativeLayout>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:spanCount="3"
        android:layout_marginHorizontal="10dp"
        tools:listitem="@layout/item_list_sticker"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/actionBar" />




    <FrameLayout
        android:id="@+id/btnDowLoad"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutBot"
        android:background="@drawable/img_item_ss">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="120dp"
            android:src="@drawable/download_ic"/>

        <TextView
            android:id="@+id/txtDownLoad"
            style="@style/custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/londrina_solid_regular"
            android:text="@string/download"
            android:gravity="center"
            android:layout_marginStart="14dp"
            android:textColor="@color/orange"
            android:textSize="20sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/layoutBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/tranf"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">


            <FrameLayout
                android:id="@+id/btnShareWhatsapp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@drawable/bg_item_whatsaapp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_what"/>

                <TextView
                    android:id="@+id/txtShare"
                    style="@style/custom_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_gravity="start|center_vertical"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/add_to_whatsapp"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
            </FrameLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <FrameLayout
                android:id="@+id/btnShareTelegram"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/bg_item_telegram">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_tele"/>

                <TextView
                    android:id="@+id/txtShareTelegram"
                    style="@style/custom_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:text="@string/add_to_telegram"
                    android:gravity="center"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </FrameLayout>



        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>