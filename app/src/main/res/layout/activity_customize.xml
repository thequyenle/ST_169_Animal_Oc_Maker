<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_app"
    tools:context=".ui.customize.CustomizeActivity">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="20dp" />


    <TextView
        android:id="@+id/btnNext"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_goneMarginEnd="21dp"/>

    <!-- Layout Image Layer -->


    <ImageView
        app:layout_constraintTop_toBottomOf="@id/btnRandom"
        app:layout_constraintEnd_toEndOf="@id/btnRandom"
        android:id="@+id/btnFlip"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_flip"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnReset"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_reset"
        app:layout_constraintEnd_toEndOf="@id/btnNext"
        app:layout_constraintTop_toBottomOf="@id/btnNext" />

    <ImageView
        android:id="@+id/btnRandom"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_random"
        app:layout_constraintTop_toBottomOf="@id/btnReset"
        app:layout_constraintEnd_toEndOf="@id/btnNext" />

    <!-- layoutCustomLayer - Character Preview Area -->
    <FrameLayout
        android:id="@+id/layoutCustomLayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutRcvColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnReset"
        android:layout_marginBottom="18dp"
        >

        <!-- Character layers will be added dynamically here -->

    </FrameLayout>

    <!-- gl0625 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl0625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <ImageView
        android:id="@+id/btnColor"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/ic_color_1_enable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutRcvColor"
        app:layout_constraintBottom_toBottomOf="@id/layoutRcvColor"/>

    <FrameLayout
        android:id="@+id/layoutRcvColor"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_color_cus"
        android:visibility="invisible"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toEndOf="@id/btnColor"
        app:layout_constraintBottom_toTopOf="@id/gl0625"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="9"
            tools:listitem="@layout/item_color" />
    </FrameLayout>

    <!--    btnRandom-->


    <!-- layoutRcv -->
    <FrameLayout
        android:id="@+id/layoutRcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rcvNavigation"
        app:layout_constraintTop_toBottomOf="@+id/gl0625">

        <!--        rcvLayer-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingTop="16dp"
            android:background="#FFF0D7"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"
            tools:listitem="@layout/item_cus" />
    </FrameLayout>

    <!-- rcvNavigation -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="2dp"
        android:background="#FFCC97"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_navi">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>